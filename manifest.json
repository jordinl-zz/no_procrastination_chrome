{
  "version": "1.0",
  "background_page": "background.html",
  "icon": "icon.png",
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "name": "No Procrastination",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["block_domains.js"],
      "run_at": "document_start"
    }
  ],
  "description": "No procrastination boosts your productivity by blocking any website you want",
  "browser_action": {
      "default_icon": "icon.png",
      "popup": "popup.html"
  }
}
